{
  "name": "linkedgoals-mvp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:dev": "NODE_ENV=development tsc -b && vite build --mode development",
    "build:staging": "NODE_ENV=staging tsc -b && vite build --mode staging",
    "build:prod": "NODE_ENV=production tsc -b && vite build --mode production",
    "deploy:dev": "firebase use dev && npm run build:dev && firebase deploy",
    "deploy:staging": "firebase use staging && npm run build:staging && firebase deploy",
    "deploy:prod": "firebase use prod && npm run build:prod && firebase deploy",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:performance": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "firebase:emulators": "firebase emulators:start --only firestore,auth",
    "emulators:dev": "firebase use dev && firebase emulators:start",
    "emulators:staging": "firebase use staging && firebase emulators:start",
    "audit:security": "npm audit && snyk test",
    "analyze:bundle": "webpack-bundle-analyzer build/static/js/*.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@types/react-router-dom": "^5.3.3",
    "chart.js": "^4.4.9",
    "firebase": "^11.9.0",
    "firebase-admin": "^13.4.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.0.0",
    "selenium-webdriver": "^4.33.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.0.3",
    "chromedriver": "^136.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "globals": "^16.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "jest-ts-webcompat-resolver": "^1.0.1",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.2",
    "typescript-eslint": "^7.18.0",
    "vite": "^6.3.5",
    "whatwg-fetch": "^3.6.20"
  }
}
