rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Development rules - more permissive for testing
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Admin access for development
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read/write for authenticated users on their own data
    match /users/{userId}/goals/{goalId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow goal sharing for development
    match /sharedGoals/{shareId} {
      allow read, write: if request.auth != null;
    }
    
    // Email verification documents for development
    match /emailVerifications/{verificationId} {
      allow read, write: if request.auth != null;
    }
  }
} 